{
  "rules": {
    "crew": {
      ".indexOn": [
        "crewType",
        "crewURL"
      ],
      ".read": "true",
      ".write": "root.child('users').child(auth.uid).child('permission').val() <= 0"
    },
    "amazecreationz": {
      "query": {
        ".indexOn": "attended",
        ".read": "root.child('users').child(auth.uid).child('permission').val() <= 1",
        ".write": "root.child('users').child(auth.uid).child('permission').val() <= 1",
        "$queryId": {
          ".read": "auth.uid === data.child('uid').val()",
          ".write": "newData.child('email').exists()"
        }
      },
      "notifications": {
        "tokens": {
          "$userId": {
            ".read": "auth.uid === $userId",
            ".write": "auth.uid === $userId"
          }
        },
        "content": {
          "$userId": {
            ".indexOn": "read",
            ".read": "auth.uid === $userId",
            ".write": "auth.uid === $userId"
          }
        }
      }
    },
    "users": {
      ".indexOn": [
        "permission",
        "crew"
      ],
      ".write": "data.child(auth.uid).child('permission').val() === 0",
      ".read": "data.child(auth.uid).child('permission').val() <= 1",
      "$userId": {
        ".read": "auth.uid === $userId"
      }
    },
    ".write": "root.child('users').child(auth.uid).child('permission').val() === 0",
    ".read": "root.child('users').child(auth.uid).child('permission').val() === 0"
  }
}