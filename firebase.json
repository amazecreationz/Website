{
  "hosting": {
    "public": "public",
    "redirects": [ {
      "source": "/auth/*",
      "destination": "/",
      "type": 301
    }],
    "rewrites": [
      {
        "source": "/manifest",
        "destination": "/manifest.json"
      },
      {
        "source": "/appLogin",
        "destination": "/app-login.html"
      },
      {
        "source": "/auth",
        "destination": "/auth.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/resources/js/*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      },
      {
        "source": "/resources/css/*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  }
}